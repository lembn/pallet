<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="root" styleClass="note-container" stylesheets="@../css/note.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="models.note.NoteView">
    <children>
    <VBox VBox.vgrow="ALWAYS" styleClass="note-content">
        <children>
            <Label fx:id="title">
                <styleClass>
                <String fx:value="title" />
                <String fx:value="white-txt" />
                </styleClass>
            </Label>
            <Label fx:id="para">
                <styleClass>
                <String fx:value="para" />
                <String fx:value="white-txt" />
                </styleClass>
            </Label>
        </children>
    </VBox>
    <HBox alignment="CENTER">
        <children>
            <Pane styleClass="note-options" HBox.hgrow="ALWAYS">
                <children>
                <Label fx:id="time" styleClass="time" />
                </children>
            </Pane>
            <Pane styleClass="note-options" HBox.hgrow="NEVER">
                <children>
                <ImageView fx:id="deleteBtn" fitHeight="16.0" fitWidth="16.0" pickOnBounds="true" preserveRatio="true" styleClass="btn">
                    <image>
                        <Image url="@../img/trash.png" />
                    </image>
                </ImageView>
                </children>
            </Pane>
        </children>
         <padding>
            <Insets left="10.0" right="10.0" bottom="10.0"/>
         </padding>
    </HBox>
    </children>
</VBox>
